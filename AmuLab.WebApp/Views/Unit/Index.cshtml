@using AntData.TKV.Controllers
@model AntData.TKV.Business.Models.UnitModel
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var baseController = ViewContext.Controller as BaseController;
}
@section scriptsHeader{
    <script src="/Content/js/bootbox.js"></script>
}

<section class="content-header">
    <h1>
        Quản lý đơn vị tính
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<section class="content">
    <div class="row">

        @if (Model.Unit.Id > 0)
            {
                if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
                {
                <div class="col-md-6">
                    @Html.Partial("_Update", Model)
                </div>
            }
        }
        else
        {
            if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add))
            {
                <div class="col-md-6">
                    @Html.Partial("_Create", Model)
                </div>
            }
        }

        <div class="col-md-6">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách đơn vị tính</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Tên đơn vị tính</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Units != null && Model.Units.Count > 0)
                            {
                                foreach (var item in Model.Units)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>
                                            @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
                                            {
                                                <a href="/unit?id=@item.Id" title="Cập nhật">
                                                    <i class="fa fa-fw fa-edit"></i>
                                                </a>
                                            }
                                            @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Delete))
                                            {
                                                <a href="#" title="Xóa" onclick="del(@item.Id);">
                                                    <i class="fa fa-fw fa-trash"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                        @*<tfoot>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>
                </tr>
            </tfoot>*@
                    </table>
                    @Html.Partial("_UnitPaging", Model)
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>


@section scripts{
    <script>
        function del(id) {
            bootbox.confirm({
                size: "small",
                message: "Bạn có thực sự muốn xóa?",
                callback: function (result) {
                    /* result is a boolean; true = OK, false = Cancel*/
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: "/unit/delete?id=" + id,
                            dataType: "json",
                            success: function (response) {
                                debugger;
                                if (response.Status == 1) {
                                    window.location.reload(true);
                                } else {
                                    bootbox.alert(response.Message);
                                }
                            }
                        });
                    }
                }
            });
        }

        $(document).ready(function () {
            $("#unit-index").addClass("active");
            $("#category").addClass("active menu-open");
        });
    </script>
}

