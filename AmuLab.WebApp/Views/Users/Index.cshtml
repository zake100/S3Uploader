@section scripts{
    <script>
        @*$(document).ready(function () {
            var current = '@ViewBag.Current';
            var parent = '@ViewBag.Parent';
            $("#"+current).addClass("active");
            $("#"+parent).addClass("active menu-open");
        });*@

        var userId = 0;
        var roleIds = [];
        function openRole(id) {
            $("#modal-roles").modal('show');
            userId = id;
            setActiveRoles();
            $("#message").text("");
        };

        function openChangePass(id, name) {
            $("#modal-changepass").modal('show');
            $("#changePassUserId").val(id);
            $("#newPass").val("");
            $("#oldPass").val("");
            $("#changePassError").val("");
            $("#changePassUserId").val(id);
            $("#NewPassword").val("");
            $("#RePassword").val("");
            $("#NewPasswordErr").text("");
            $("#RePasswordErr").text("");
            $("#userNameChangePass").text(name);
        };

        function setActiveRoles() {
            $("input:checkbox[name=roles]").prop('checked', false);
            $.get({
                url: '/roles/getrolebyuser?userId=' + userId,
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.Status == 1) {
                        for (i = 0; i < response.Data.length; i++) {
                            $("#roles_" + response.Data[i]).prop('checked', true);
                        }
                    }

                }
            });
        }

        function getRoleIds() {
            roleIds = [];
            $("input:checkbox[name=roles]:checked").each(function () {
                roleIds.push($(this).val());
            });
        }
        function changePass() {
            var userid = $("#changePassUserId").val();
            var newPassword = $("#NewPassword").val();
            var rePassword =  $("#RePassword").val();
            var check = true;
            if (!newPassword) {
                $("#NewPasswordErr").text("Chưa nhập mật khẩu mới.");
                check = false;
            }else if (newPassword.length < 8) {
                $("#NewPasswordErr").text("Mật khẩu phải dài hơn 8 ký tự.");
                check = false;
            } else {
                $("#NewPasswordErr").text("");
            }
            if (newPassword!=rePassword) {
                $("#RePasswordErr").text("Mật khẩu nhập lại không khớp.");
                check = false;
            } else {
                $("#RePasswordErr").text("");
            }
            if (check) {
                $.ajax({
                    type: "POST",
                    url: "/Users/ResetPassword",
                    dataType: "json",
                    data: {
                        UserId: userid,
                        NewPassword: newPassword
                    },
                    success: function (response) {
                        if (response.Status == 0) {
                            $("#changePassError").addClass("text-danger").text(response.Message);
                        }
                        else {
                            confirm(response.Message);
                            $("#modal-changepass").modal('hide');
                        }
                    }
                });
            }
                //
                //Mật khẩu phải từ 8 ký tự trở lên
        }
        function userRoleAdd() {
            getRoleIds();
            if (roleIds.length === 0) {
                $("#message").addClass("text-warning").text("Bạn chưa chọn phân quyền");
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/roles/adduserrole",
                    dataType: "json",
                    data: {
                        RoleIds: roleIds,
                        User_Id: userId
                    },
                    success: function (response) {
                        if (response.Status == 0) {
                            $("#message").addClass("text-danger").text("Không thực hiện được thao tác");
                        }
                        else {
                            $("#message").addClass("text-info").text("Cập nhật phân quyền thành công");
                        }
                    }
                });
            }
        }

        $(document).ready(function () {
            $("#users-index").addClass("active");
            $("#category").addClass("active menu-open");
        });

    </script>
}
