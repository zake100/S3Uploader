@using AntData.TKV.Controllers
@model AntData.TKV.Business.Models.UsersModel
@{
    ViewBag.Title = "Quản lý người dùng";
    var baseController = ViewContext.Controller as BaseController;
}

<section class="content-header">
    <h1>
        Quản lý người dùng
    </h1>
    <ol class="breadcrumb">
        @*<li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>*@
    </ol>
</section>
<section class="content">
    @if (Model.User.Id > 0)
    {
        if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
        {
         @Html.Partial("_UserUpdate", Model)
        }
    }
    else
    {
        if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add))
        {
            @Html.Partial("_UserCreate", Model)
        }
    }

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    @Html.Partial("_UserSearch", Model)
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table class="table table-bordered table-striped">
                        <thead>
                        <tr>
                            <th class="text-center" width="30px">TT</th>
                            <th>Tên người dùng</th>
                            <th>Họ và tên</th>
                            <th>Email</th>
                            <th>Quyền</th>     
                            <th>Trạng thái</th>              
                            <th width="100px">Công cụ</th>
                        </tr>
                        </thead>
                        <tbody>
                        @{
                            var index = 1;                                
                        }
                        @foreach (var item in Model.UserList)
                        {
                            <tr>
                                <td class="text-center">
                                    @((Model.Search.PageNumber - 1) * Model.Search.PageSize + index)
                                </td>
                                <td>
                                    @item.Username
                                </td>
                                <td>
                                    @item.Firstname @item.Lastname
                                </td>
                                <td>
                                    @item.Email
                                </td>
                                <td>
                                    @if(item.RolesName!=null && item.RolesName.Count>0)
                                    {
                                        foreach(var r in item.RolesName)
                                        {
                                            <span class="label label-primary">@r</span>
                                        }
                                    }
                                </td>
                                <td>
                                    @if(item.Inactive)
                                    {
                                        <span class="label label-info">Hoạt động</span>
                                    }
                                    else
                                    {
                                        <span class="label label-warning">Đang khóa</span>
                                    }

                                </td>
                                <td>
                                    @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update)){
                                        <a href="@Url.Action("Index","Users", new{ id = item.Id})" title="Cập nhật">
                                            <i class="fa fa-fw fa-edit"></i>
                                        </a>
                                    }
                                    &nbsp;
                                    @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add)){
                                        <a onclick="openRole(@item.Id)" href="#" title="Phân quyền">
                                            <i class="fa fa-users"></i>
                                        </a>
                                    }
                                    &nbsp;
                                    @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
                                    {
                                        <a href="#" onclick="openChangePass(@item.Id, '@item.Firstname @item.Lastname')"><i class="fa fa-user-secret"></i></a>
                                    }
                                    &nbsp;
                                </td>
                            </tr>    
                            index++;
                        }
                        </tbody>
                        <tfoot>
                        @*<tr>
                                    <th>Tên thiết bị</th>
                                    <th>Thiết bị điều khiển</th>
                                    <th>Sổ quản lý</th>
                                    <th>Vị trí lắp đặt</th>
                                    <th>Đơn vị tính</th>
                                    <th>Số lượng</th>
                                    <th>Trạng thái</th>
                                    <th>Ghi chú</th>
                                    <th></th>
                                </tr>*@
                        </tfoot>
                    </table>
                    @Html.Partial("_UserPaging", Model)
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>
    </div>
</section>

<div class="modal fade" id="modal-changepass">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">Thay đổi mật khẩu cho <b id="userNameChangePass"></b></h4>
            </div>

            <div class="modal-body">
                <div class="row">
                    <input id="changePassUserId" hidden=""/>
                    <div class="col-md-12">
                        @Html.AntiForgeryToken()
                        <div class="form-group" style="width: 100%; float: left;">
                            <label for="pass" class="col-sm-2 control-label">Mật khẩu mới <span class="require-input" style="color: red;" title="">*</span></label>
                            <div class="col-sm-10">
                                <input class="form-control" data-val="true" id="NewPassword" minlength="8" name="NewPassword" placeholder="Mật khẩu mới" type="password" value="">
                                <span class="field-validation-valid text-danger" id="NewPasswordErr"></span>
                            </div>
                        </div>
                        <div class="form-group" style="width: 100%; float: left;">
                            <label for="passRe" class="col-sm-2 control-label">Nhập lại mật khẩu <span class="require-input" style="color: red;" title="">*</span></label>
                            <div class="col-sm-10">
                                <input class="form-control" data-val="true"  id="RePassword" name="RePassword" placeholder="Nhập lại mật khẩu" type="password" value="">
                                <span class="field-validation-valid text-danger" id="RePasswordErr"></span>
                            </div>
                        </div>
                        <div class="form-group text-center">
                            <span id="changePassError" class="text-danger"></span>
                        </div>

                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Đóng</button>
                <button type="button" onclick="changePass()" class="btn btn-primary">Cập nhật</button>
            </div>

        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>

