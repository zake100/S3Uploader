@model AntData.TKV.Business.Models.UserInfoModel
@{
    ViewBag.Title = "Thông tin tài khoản";
}

<script src="@Url.Content("~/Scripts/jquery.unobtrusive-ajax.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.js")" type="text/javascript"></script>

<section class="content-header">
    <h1>
        Thông tin người dùng
    </h1>
</section>

<section class="content">
    <div class="row" >
        <div class="col-md-3">
            <!-- Profile Image -->
            <div class="box box-primary">
                <div class="box-body box-profile">
                    <img class="profile-user-img img-responsive img-circle" src="~/content/img/usericon.png" alt="Ảnh đại diện" />
                    <h3 class="profile-username text-center">@Model.UserInfo.Username</h3>
                    <ul class="list-group list-group-unbordered">
                        <li class="list-group-item">
                            <b>Họ và tên</b> <a class="pull-right">@Model.UserInfo.Firstname @Model.UserInfo.Lastname</a>
                        </li>
                        <li class="list-group-item">
                            <b>Email</b> <a class="pull-right">@Model.UserInfo.Email</a>
                        </li>
                        <li class="list-group-item">
                            <b>Ngày tham gia</b> <a class="pull-right">@Model.UserInfo.CreateDate.ToString("dd/MM/yyyy")</a>
                        </li>
                    </ul>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
        <!-- /.col -->
        <div class="col-md-9">
            <div class="nav-tabs-custom">
                <ul class="nav nav-tabs">
                    <li class="active"><a href="#changepass" data-toggle="tab">Thay đổi mật khẩu</a></li>
                </ul>
                <div class="tab-content">
                    <div class="tab-pane active">
                        @using (Html.BeginForm("Info", "Users", FormMethod.Post, new { @class="form-horizontal"}))
                        {
                            @Html.AntiForgeryToken()
                            <div class="form-group">
                                <label for="passOld" class="col-sm-2 control-label">Mật khẩu cũ  <span class="require-input" style="color: red;" title="">*</span></label>
                                <div class="col-sm-10">
                                    
                                     @Html.TextBoxFor(m => m.OldPassword, new { @class = "form-control", @minLength = "8", @placeholder = "Mật khẩu cũ", @type="password" })
                                    @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger"})
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="pass" class="col-sm-2 control-label">Mật khẩu mới  <span class="require-input" style="color: red;" title="">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.NewPassword, new { @class = "form-control", @minLength = "8", @placeholder = "Mật khẩu mới", @type = "password" })
                                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="passRe" class="col-sm-2 control-label">Nhập lại mật khẩu  <span class="require-input" style="color: red;" title="">*</span></label>
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(m => m.RePassword, new { @class = "form-control", @minLength="8", @placeholder = "Nhập lại mật khẩu" , @type = "password" })
                                    @Html.ValidationMessageFor(m => m.RePassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group text-center text-danger">
                                @Html.ValidationMessage("error")
                            </div>
                            <div class="form-group">
                                <div class="col-sm-offset-2 col-sm-10">
                                    <button type="submit" class="btn btn-success" onclick="changePassword()">
                                        <i class="fa fa-check icon-white"></i>&nbsp;Thay đổi mật khẩu
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- /.tab-pane -->
                </div>
                <!-- /.tab-content -->
            </div>
            <!-- /.nav-tabs-custom -->
        </div>
        <!-- /.col -->
    </div>
</section>