@model AntData.TKV.Business.Models.RoleModel
@using AntData.TKV.Controllers
@{
    ViewBag.Title = "Quản lý Roles";
    var baseController = ViewContext.Controller as BaseController;
}

<section class="content-header">
    <h1>
        Quản lý quyền
    </h1>
    <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li class="active">Dashboard</li>
    </ol>
</section>
<section class="content">
    <div class="row">

        @if (Model.Role.Id > 0)
            {
                if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
                {
                <div class="col-md-4">
                    @Html.Partial("_Update", Model)
                </div>
            }
        }
        else
        {
            if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add))
            {
                <div class="col-md-4">
                    @Html.Partial("_Create", Model)
                </div>
            }
        }



        <div class="col-md-8">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Danh sách</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body">
                    <table id="example2" class="table table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Tên Phân Quyền</th>
                                <th>Mô tả</th>
                                <th>Công cụ</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.RoleList != null && Model.RoleList.Count > 0)
                            {
                                foreach (var item in Model.RoleList)
                                {
                                    <tr>
                                        <td>@item.Id</td>
                                        <td>@item.Name</td>
                                        <td>@item.Description</td>
                                        <td>
                                            @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Update))
                                            {
                                                <a href="/roles?id=@item.Id" title="Cập nhật">
                                                    <i class="fa fa-fw fa-edit"></i>
                                                </a>
                                            }
                                            &nbsp;
                                            @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add))
                                            {
                                                <a onclick="openFunction(@item.Id)" href="#">
                                                    <i class="glyphicon glyphicon-lock"></i>
                                                </a>
                                            }
                                            &nbsp;
                                            @if (baseController.HasRole((int)AntData.TKV.Helper.ActionEnum.Add))
                                            {
                                                <a href="#" title="Action" onclick="openAction(@item.Id)">
                                                    <i class="glyphicon glyphicon-tasks"></i>
                                                </a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.box-body -->
            </div>
        </div>
    </div>
</section>
@section scripts{
    <script type="text/javascript">
        function del(id) {
            bootbox.confirm({
                size: "small",
                message: "Bạn có thực sự muốn xóa?",
                callback: function (result) {
                    /* result is a boolean; true = OK, false = Cancel*/
                    if (result) {
                        $.ajax({
                            type: "POST",
                            url: "/unit/delete?id=" + id,
                            dataType: "json",
                            success: function (response) {
                                if (response.Status == 1) {
                                    window.location.reload();
                                }
                                else {
                                    bootbox.alert(response.Message);
                                }
                            }
                        })
                    }
                }
            })
        }

        var roleId = 0;
        var functionIds = [];
        var actionIds = [];

        function openFunction(id) {
            $("#modal-roles").modal('show');
            roleId = id;
            setActiveFunctionTree();
            $("#treeMessage").text("");
        };

        function openAction(id) {
            $("#modal-action").modal('show');
            roleId = id;
            setActiveAction();
            $("#messageAction").text("");
        };

        function setActiveFunctionTree() {
            $("input:checkbox[name=functionid]").prop('checked', false);
            $.get({
                url: '/roles/getfunctionbyrole?roleId=' + roleId,
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.Status == 1) {
                        for (i = 0; i < response.Data.length; i++) {
                            $("#li_" + response.Data[i]).find("input").prop('checked', true);
                        }
                    }

                }
            });
        }

        function setActiveAction() {
            $("input:checkbox[name=actionid]").prop('checked', false);
            $.get({
                url: '/roles/getactionbyrole?roleId=' + roleId,
                type: 'GET',
                dataType: 'json',
                success: function (response) {
                    if (response.Status == 1) {
                        for (i = 0; i < response.Data.length; i++) {
                            $("#action_" + response.Data[i]).prop('checked', true);
                            //$("#action_" + response.Data[i]).iCheck('check');

                        }
                        //$("#action_2").iCheck('check');
                    }

                }
            });
        }

        function roleFunctionAdd() {
            getFunctionIds();
            if (functionIds.length === 0) {
                $("#treeMessage").addClass("text-warning").text("Bạn chưa chọn quyền");
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/roles/addrolefunction",
                    dataType: "json",
                    data: {
                        RoleId: roleId,
                        FuntionIds: functionIds
                    },
                    success: function (response) {
                        if (response.Status == 0) {
                            $("#treeMessage").addClass("text-danger").text("Không thực hiện được thao tác");
                        }
                        else {
                            $("#treeMessage").addClass("text-info").text("Gán quyền thành công");
                        }
                    }
                });
            }
        }

        function roleActionAdd() {
            getActionIds();
            if (actionIds.length === 0) {
                $("#messageAction").addClass("text-warning").text("Bạn chưa chọn action");
            }
            else {
                $.ajax({
                    type: "POST",
                    url: "/roles/roleactionadd",
                    dataType: "json",
                    data: {
                        RoleId: roleId,
                        ActionIds: actionIds
                    },
                    success: function (response) {
                        if (response.Status == 0) {
                            $("#messageAction").addClass("text-danger").text("Không thực hiện được thao tác");
                        }
                        else {
                            $("#messageAction").addClass("text-info").text("Gán action thành công");
                        }
                    }
                });
            }
        }

        function getFunctionIds() {
            functionIds = [];
            $("input:checkbox[name=functionid]:checked").each(function () {
                functionIds.push($(this).val());
            });
        }

        function getActionIds() {
            actionIds = [];
            $("input:checkbox[name=actionid]:checked").each(function () {
                actionIds.push($(this).val());
            });
        }

        $(document).ready(function () {
            $("#roles").addClass("active");
            $("#category").addClass("active menu-open");
        });
    </script>
}

@{ Html.RenderAction("Tree", "Functions");}

