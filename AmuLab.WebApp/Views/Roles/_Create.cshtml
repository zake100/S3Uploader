@model AntData.TKV.Business.Models.RoleModel
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Thêm mới</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm("Index", "Roles", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label>Tên Phân Quyền <span style="color:red;">(*)</span></label>
                    @Html.TextBoxFor(m => m.Role.Name, new { @class = "form-control" })
                </div>
                <div class="form-group">
                    <label>Mô tả</label>
                    @Html.TextBoxFor(m => m.Role.Description, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-actions">
                <div class="form-group text-danger">
                    @Html.ValidationMessage("error")
                </div>
                <button type="submit" class="btn btn-primary"><i class="fa fa-plus"></i> Thêm mới</button>
            </div>
        }
    </div>
</div>


