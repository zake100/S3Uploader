@model AntData.TKV.Business.Models.DeviceTransferModel
<style>
    .select2-container--default .select2-selection--single {
        height: 34px;
        border-radius: 0px;
    }
</style>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-danger">
            <div class="box-header with-border">
                <h3 class="box-title">Tìm kiếm</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool " data-widget="collapse"><i class="fa fa-minus"></i></button>
                    @*<button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-remove"></i></button>*@
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("DeviceTransferList", "Device", FormMethod.Post, new { id = "deviceTransferSearchForm"}))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-12 row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Tên thiết bị</label>
                                    <select class="form-control select2" style="width: 100%;" name="Search.DeviceSearchId" id="deviceForSearch">
                                        @if (Model.Search.DeviceSearchId.HasValue)
                                        {
                                            <option value="@Model.Search.DeviceSearchId.Value" selected="selected">@Model.Search.DeviceName</option>
                                        }
                                    </select>
                                    <input type="hidden" name="Search.DeviceName" id="searchDeviceName" value="@Model.Search.DeviceName" />
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Đơn vị chuyển đi</label>
                                    <select class="form-control select2" id="optionSourceFactory" style="width: 100%;" name="Search.SourceFactoryId">
                                    
                                    </select>
                                    @Html.HiddenFor(m => m.Search.SourceFactoryName, new { @class = "form-control", @id = "SourceFactoryName" })
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label>Đơn vị chuyển đến</label>
                                    <select class="form-control select2" id="optionTargetFactory" style="width: 100%;" name="Search.TargetFactoryId"></select>
                                    @Html.HiddenFor(m => m.Search.TargetFactoryName, new { @class = "form-control", @id = "TargetFactoryName" })
                                </div>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div class="input-group" style="float:right;">
                                    <button type="submit" class="btn btn-primary" onclick="resetPaing()">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                        @Html.HiddenFor(m => m.Search.PageNumber, new { @class = "form-control", @id = "DeviceTransferPageNumber" })
                        @Html.HiddenFor(m => m.Search.PageSize, new { @class = "form-control", @id = "DeviceTransferPageSize" })
                    }
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>

<script type="text/javascript">
    function resetPaing() {
        $('#DeviceTransferPageNumber').val(1);
        return true;
    }
    $(function () {
        $.ajax({
            type: "POST",
            url: "@Url.Action("GetFactory", "Device")",
            dataType: "json",
            data: {
                Pattern: '',
                Offset: 0,
                Limit: 10000000
            },
            success: function (response) {
                $("#optionSourceFactory").select2({
                    closeOnSelect: true,
                    data: response,
                    placeholder: 'Chọn đơn vị'
                });
                $("#optionTargetFactory").select2({
                    closeOnSelect: true,
                    data: response,
                    placeholder: 'Chọn đơn vị'
                });
                $("#optionSourceFactory").val('@Model.Search.SourceFactoryId.GetValueOrDefault(0)').trigger('change');
                $("#optionTargetFactory").val('@Model.Search.TargetFactoryId.GetValueOrDefault(0)').trigger('change');
            }
        });

        $("#optionSourceFactory").on('select2:select',
            function(e) {
                var data = e.params.data;
                $('#SourceFactoryName').val(data.text);
            });

        $("#optionSourceFactory").on('select2:unselect',
            function(e) {
                $('#SourceFactoryName').val('');
            });

        $("#optionTargetFactory").on('select2:select',
            function(e) {
                var data = e.params.data;
                $('#TargetFactoryName').val(data.text);
            });

        $("#optionTargetFactory").on('select2:unselect',
            function(e) {
                $('#TargetFactoryName').val('');
            });

        $('#deviceForSearch').on('select2:select', function (e) {
            var data = e.params.data;
            $('#searchDeviceName').val(data.text);
        });
        $('#deviceForSearch').on('select2:unselect', function (e) {
            $('#searchDeviceName').val('');
        });

        $("#deviceForSearch").select2({
            minimumInputLength: 0,
            allowClear: true,
            multiple: false,
            ajax: {
                url: '@Url.Action("SearchDeviceBaseForSelect2", "DeviceBase")',
                dataType: 'json',
                type: "GET",
                data: function (params) {
                    return {
                        q: params.term,
                        pageIndex: (params.page || 1),
                        pageSize: 10
                    };
                },
                processResults: function (data, params) {
                    params.page = params.page || 1;
                    return {
                        results: data.Data,
                        pagination: {
                            more: data.Data.length >= params.page * 10
                        }
                    };
                }
            },
            placeholder: 'Chọn thiết bị',
            //dropdownParent: $('#deviceForSearch').parent(),
            escapeMarkup: function (markup) { return markup; },
            templateResult: function (results) {
                if (results) {
                    var rs = JSON.stringify(results);
                    var json = JSON.parse(rs);
                    return "<div title='" + json["text"] + "' id='" + json["id"] + "'>" + json["text"] + "</div>";
                }
                return "<div title='' id=''></div>";
            },
            templateSelection: function (results) {
                return "<div style='float:left;' id='" + results.id + "'>" + results.text + "</div>";
            }
        });
    });
</script>    