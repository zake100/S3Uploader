@model AntData.TKV.Business.Models.DeviceCategoryModel
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Cập nhật</h3>
    </div>
    <div class="box-body">
        @using (Html.BeginForm("DeviceCategory", "Device", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-body">
                <div class="form-group">
                    <label>Tên danh mục <span style="color:red;">(*)</span></label>
                    <div class="input-group" style="width:60%;">
                        @Html.TextBoxFor(m => m.DeviceCategory.Name, new { @class = "form-control" })
                        @Html.TextBoxFor(m => m.DeviceCategory.Id, new { @class = "form-control", @type = "hidden" })
                    </div>
                </div>
                <div class="form-group text-danger">
                    @Html.ValidationMessage("error")
                </div>
            </div>
            <div class="form-actions">
                <button type="submit" class="btn btn-info">Cập nhật</button>
                <a href="/device/devicecategory" class="btn btn-default">Quay lại</a>
            </div>
        }
    </div>
</div>
