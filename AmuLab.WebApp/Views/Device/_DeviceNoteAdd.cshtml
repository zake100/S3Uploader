
@model AntData.TKV.Business.Models.DeviceNotesModel
<style>
    .select2-container--default .select2-selection--single {
        height: 34px;
        border-radius: 0px;
    }
</style>
<div class="row">
    <div class="col-xs-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Thêm mới ghi chú</h3>
                <div class="box-tools pull-right">
                    <button type="button" class="btn btn-box-tool " data-widget="collapse"><i class="fa fa-minus"></i></button>                    
                </div>
            </div>
            <!-- /.box-header -->
            <div class="box-body">
                <div class="row">
                    @using (Html.BeginForm("DeviceNoteList", "Device", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Đơn vị</label>
                                <select class="form-control select2" id="optionFactory" style="width: 100%;"></select>
                                
                            </div>
                            <div class="form-group">
                                <label>Tên thiết bị</label>
                                
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Danh mục thiết bị</label>
                                <select class="form-control select2" id="optionDeviceCategory" data-placeholder="Chọn danh mục" style="width: 100%;"></select>
                                @*@Html.TextBoxFor(m => m.Search.DeviceCategoryId, new { @class = "form-control", @type = "hidden", @id = "DeviceCategoryId" })*@
                            </div>
                            <div class="form-group">
                                <label>Đơn vị tính</label>
                                <select class="form-control select2" id="optionUnit" data-placeholder="Chọn đơn vị tính" style="width: 100%;"></select>
                                
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Từ ngày - đến ngày</label>
                                <div class="input-group">
                                    <div class="input-group-addon">
                                        <i class="fa fa-calendar"></i>
                                    </div>
                                    <input type="text" class="form-control pull-right" id="reservation">                        
                                </div>
                                <!-- /.input group -->
                            </div>
                            <div class="form-group">
                                <label>&nbsp;</label>
                                <div class="input-group">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-search"></i> Tìm kiếm
                                    </button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <!-- /.row -->
            </div>
            <!-- /.box-body -->
        </div>
    </div>
</div>
