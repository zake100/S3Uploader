<div class="modal fade" id="modal-devicetransfer">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title">
                    Điều động thiết bị
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="box-body">
                        <div class="form-group">
                            Tên thiết bị: <label id="deviceTranferName"></label>
                        </div>
                        <div class="form-group">
                            Đơn vị quản lý hiện tại: <label id="currentFactoryName"></label>
                            <input type="hidden" id="currentFactoryId" />
                            <input type="hidden" id="deviceId" />

                        </div>
                        <div class="form-group">
                            <label>Đơn vị chuyển đến <span style="color:red;">(*)</span></label>
                            <select class="form-control select2" id="optionFactoryTransfer" style="width: 100%;"></select>
                            <input type="hidden" id="targetFactoryId" />
                            <input type="hidden" id="targetFactoryName" />
                            <input type="hidden" id="currentQuantity" />
                        </div>
                        <div class="form-group">
                            <label>Ngày chuyển <span style="color:red;">(*)</span></label>
                            <div class="input-group">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="text" class="form-control pull-right" id="transferDate">
                                <input type="hidden" class="form-control pull-right " id="transferDateTime">
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Số lượng</label>
                            <input id="quantityTransfer" type="text" class="form-control" placeholder="0" />
                        </div>
                        <div class="form-group">
                            <label>Tình trạng thiết bị <span style="color:red;">(*)</span></label>
                            <select class="form-control select2" id="optionDeviceStatusTransfer" style="width: 100%;"></select>
                            <input type="hidden" id="popupDeviceStatusTranfer" />
                            <input type="hidden" id="popupDeviceStatusNameTranfer" />
                        </div>
                        <div class="form-group">
                            <label>Ghi chú</label>
                            <textarea id="deviceTranferNote" class="form-control" rows="4" placeholder="Ghi chú"></textarea>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12 text-center">
                        <span id="transferMessage" class=""></span>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Đóng</button>
                @*<a class="btn btn-info pull-left hide" id="aTransferList">Thông tin điều chuyển</a>*@
                <button type="button" class="btn btn-primary" id="popupDeviceTransferAdd">Điều chuyển</button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>


<script>
    $.ajax({
        type: "GET",
        url: "/device/devicestatus",
        dataType: "json",
        success: function (response) {
            $("#optionDeviceStatusTransfer").select2({
                closeOnSelect: true,
                data: response.Data,
                placeholder: 'Chọn tình trạng thiết bị',
            })
             .on("change", function (e) {
                 var deviceStatusData = $("#optionDeviceStatusTransfer").select2('data');
                 $("#popupDeviceStatusTranfer").val(deviceStatusData[0].id);
                 $("#popupDeviceStatusNameTranfer").val(deviceStatusData[0].text);
             });
        }
    });

    $.ajax({
        type: "POST",
        url: "@Url.Action("GetFactory2", "Device")",
        dataType: "json",
        data: {
            Pattern: '',
            Offset: 0,
            Limit: 10000000
        },
        success: function(response) {
            $("#optionFactoryTransfer").select2({
                closeOnSelect: true,
                data: response,
                placeholder: 'Chọn đơn vị'
            });
        }
    });

