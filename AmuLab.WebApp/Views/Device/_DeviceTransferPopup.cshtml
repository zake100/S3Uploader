    $("#optionFactoryTransfer").on('select2:select',
        function (e) {
            var data = e.params.data;
            $('#targetFactoryName').val(data.text);
            $("#targetFactoryId").val(data.id);
        });

    $("#optionFactoryTransfer").on('select2:unselect',
        function (e) {
            $('#targetFactoryName').val('');
            $("#targetFactoryId").val('');
        });

    $(document).ready(function () {
        $('#transferDate').datepicker({
            autoclose: true,
            format: 'dd/mm/yyyy',
            todayHighlight: true
        }).on('changeDate', function (ev) {
            if (ev && ev.date) {
                var dateValue = ev.date;
                var dd = dateValue.getDate();
                var mm = dateValue.getMonth() + 1; //January is 0!

                var yyyy = dateValue.getFullYear();

                if (dd < 10) {
                    dd = '0' + dd;
                }
                if (mm < 10) {
                    mm = '0' + mm;
                }
                var expectedDate = dd + '/' + mm + '/' + yyyy;
                $("#transferDateTime").val(expectedDate);
            }
            else {
                $("#transferDateTime").val('');
            }
        });
        $("#popupDeviceTransferAdd").on('click', function () {

            var r = confirm("Bạn có chắc chắn muốn điều chuyển thiết bị đến đơn vị: " + $("#targetFactoryName").val());
            if (r == true) {
                if (parseInt($("#currentQuantity").val()) < parseInt($("#quantityTransfer").val())) {
                    $("#transferMessage").text("Số lượng điều chuyển không được lớn hơn số lượng hiện tại.").addClass("text-danger");
                    return;
                }

                $.ajax({
                    method: "POST",
                    url: "/device/devicetransferadd",
                    data: {
                        DeviceId: $("#deviceId").val(),
                        CurrentFactory: $("#currentFactoryId").val(),
                        TargetFactory: $("#optionFactoryTransfer").val(),
                        TransferDateTime: $("#transferDateTime").val(),
                        Status: $("#popupDeviceStatusTranfer").val(),
                        Quantity: $("#quantityTransfer").val(),
                        Description: $("#deviceTranferNote").val(),
                        CurrentFactoryName: $("#currentFactoryName").text(),
                        TargetFactoryName: $("#targetFactoryName").val(),
                        CurrentQuantity: $("#currentQuantity").val()
                    }
                })
                .done(function (msg) {

                    if (msg.Id > 1) {
                        $("#transferMessage").text(msg.Message).removeClass("text-danger").addClass("text-info");
                        setTimeout(function () {
                            window.location.reload();
                        }, 1000);
                    }
                    else {
                        $("#transferMessage").text(msg.Message).addClass("text-danger");
                    }
                });
            }
        });
    });
</script>