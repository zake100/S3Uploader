@model AntData.TKV.Business.Models.DeviceTransferModel
<style>
    .pagination > .active > button, .pagination > .active > button:focus, .pagination > .active > button:hover, .pagination > .active > span, .pagination > .active > span:focus, .pagination > .active > span:hover {
        z-index: 3 !important;
        color: #fff !important;
        background-color: #337ab7 !important;
        border-color: #337ab7 !important;
    }

    .pagination > li > button {
        background: #fafafa !important;
        color: #666 !important;
    }

    .pagination > li > button, .pagination > li > span {
        position: relative;
        float: left;
        padding: 6px 12px;
        margin-left: -1px;
        line-height: 1.42857143;
        border: 1px solid #ddd;
    }

    .pagination > li:first-child > button, .pagination > li:first-child > span {
        margin-left: 0;
        -ms-border-top-left-radius: 4px;
        border-top-left-radius: 4px;
        -ms-border-bottom-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }

    .pagination > li:last-child > button, .pagination > li:last-child > span {
        -ms-border-top-right-radius: 4px;
        border-top-right-radius: 4px;
        -ms-border-bottom-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
</style>
@if (Model.TotalPage > 1)
{
    <div class="row">
        <div class="col-md-12">
            <div class="dataTables_paginate paging_simple_numbers">
                <ul class="pagination">
                    @if (Model.Search.PageNumber > 1)
                    {
                        <li class="paginate_button previous" id="example2_previous">
                            <button onclick="pagingDeviceList(@(Model.Search.PageNumber - 1), @Model.Search.PageSize)"
                                    aria-controls="example2" data-dt-idx="0" tabindex="0">
                                Previous
                            </button>
                        </li>
                    }
                    @for (var i = 1; i <= Model.TotalPage; i++)
                    {
                        var clsActive = "";
                        if (i == Model.Search.PageNumber)
                        {
                            clsActive = "active";
                        }
                        <li class="paginate_button @clsActive">
                            <button onclick="pagingDeviceList(@i, @Model.Search.PageSize)" aria-controls="example2" data-dt-idx="@i" tabindex="@i-1">@i</button>
                        </li>
                    }
                    @if (Model.Search.PageNumber < Model.TotalPage)
                    {
                        <li class="paginate_button next" id="example2_next">
                            <button onclick="pagingDeviceList(@(Model.Search.PageNumber + 1), @Model.Search.PageSize)" aria-controls="example2" data-dt-idx="7" tabindex="0">Next</button>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
}

<script>
    function pagingDeviceList(pageIndex, pageSize) {
        $('#DeviceTransferPageNumber').val(pageIndex);
        $('#DeviceTransferPageSize').val(pageSize);
        $('#deviceTransferSearchForm').submit();
    }
</script>