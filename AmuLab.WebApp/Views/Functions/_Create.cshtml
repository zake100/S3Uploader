@model AntData.TKV.Business.Models.FunctionsModel
<div class="box">
    <div class="box-header">
        <h3 class="box-title">Thêm mới</h3>
    </div>
    <div class="box-body">
        <div class="row">
            @using (Html.BeginForm("Index", "Functions", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Key</label>
                        @Html.TextBoxFor(m => m.Function.Key, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Function.Key, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        <label>Caption</label>
                        @Html.TextBoxFor(m => m.Function.Caption, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Icon</label>
                        @Html.TextBoxFor(m => m.Function.Icon, new { @class = "form-control" })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Url</label>
                        @Html.TextBoxFor(m => m.Function.Url, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Order</label>
                        @Html.TextBoxFor(m => m.Function.Order, new { @class = "form-control" })
                    </div>

                    <div class="form-group">
                        <label>Parent</label>
                        <select class="form-control select2" id="optionFunction" style="width: 100%;"></select>
                        @Html.TextBoxFor(m => m.Function.ParentId, new { @class = "form-control", @type = "hidden", @id = "FunctionId" })
                    </div>
                    <div class="form-group">
                        <label>
                            @Html.CheckBoxFor(m => m.Function.IsShow, new { @class = "minimal" }) Hiển thị
                        </label>

                    </div>
                </div>
                <div class="col-md-12">
                    <div class="form-group text-danger">
                        @Html.ValidationMessage("error")
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Thêm mới</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
