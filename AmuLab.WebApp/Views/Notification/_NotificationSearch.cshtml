        $.ajax({
            type: "POST",
            url: "@Url.Action("GetFactory", "Device")",
            dataType: "json",
            data: {
                Pattern: '',
                Offset: 0,
                Limit: 10000000
            },
            success: function(response) {
                $("#factoryForSearch").select2({
                    closeOnSelect: true,
                    data: response,
                    placeholder: 'Chọn đơn vị'
                });
            }
        });

        $('#factoryForSearch').on('select2:select', function (e) {
